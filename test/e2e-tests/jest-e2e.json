{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../../",
  "setupFilesAfterEnv": ["./test/e2e-tests/setup-tests.e2e.ts"],
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
    "moduleNameMapper": {
      "^@adapters(.*)$": "<rootDir>/src/adapters/$1",
      "^@domain(.*)$": "<rootDir>/src/domain/$1"
    }
}
