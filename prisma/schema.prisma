generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id
  email     String  @unique
  password  String
  role      String
  customer  Customer?
  createdAt DateTime
  updatedAt DateTime?
  isDeleted Boolean
  deletedAt DateTime?
}

model Customer {
  id        String  @id
  email     String  @unique
  name      String
  user      User    @relation(fields: [userId], references: [id])
  userId    String  @unique
  favorites Product[]
  createdAt DateTime
  updatedAt DateTime?
  isDeleted Boolean
  deletedAt DateTime?
}

model Product {
  id          String  @id
  title       String
  brand       String
  price       Float
  image       String
  reviewScore Float
  customer    Customer @relation(fields: [customerId], references: [id])
  customerId  String
  createdAt   DateTime
  updatedAt   DateTime?
  isDeleted   Boolean
  deletedAt   DateTime?
}