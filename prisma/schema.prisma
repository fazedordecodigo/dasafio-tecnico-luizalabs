generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id
  email     String  @unique
  password  String
  role      String
  createdAt DateTime
  updatedAt DateTime?
  isDeleted Boolean
  deletedAt DateTime?
}

model Customer {
  id        String  @id
  email     String  @unique
  name      String
  favorites Product[]
  createdAt DateTime
  updatedAt DateTime?
  isDeleted Boolean
  deletedAt DateTime?
}

model Product {
  id          String  @id
  title       String
  brand       String
  price       Float
  image       String
  reviewScore Float
  customers   Customer[]
  createdAt   DateTime
  updatedAt   DateTime?
  isDeleted   Boolean
  deletedAt   DateTime?
}